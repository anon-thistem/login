
# printf "sourcing => %-25s" "Environment"

# ---   history   ---

HISTCONTROL=ignoreboth

# append to the history file, don't overwrite it
shopt -s histappend

# for setting history length see HISTSIZE and HISTFILESIZE in bash(1)
HISTSIZE=2000000
HISTFILESIZE=2000000

alias h='history'

# ---   history end  ---

# pro=root
# export CDPATH=~/pro/${pro}
# export CDPATH="$PWD/../inc"
# echo "CDPATH -> " $CDPATH
#
ulimit -c unlimited

export EDITOR=vi

# export QT_QPA_PLATFORM=xcb
# export PATH=.:$HOME/bin:$PATH:/opt/eclipse:/opt/gcc-15/bin:/opt/qt6/bin:/opt/qtcreator-17.0.0/bin/
export PATH=.:$HOME/bin:$PATH

. ~/.os/PS-colors-by-host

#### if [ ${LOGNAME} == "root" ]
#### then
