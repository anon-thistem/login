if [ $(uname --machine) == "aarch64" ]   # Raspberry!
then
  alias t="vcgencmd measure_temp|cut -f2 -d'='"
else
  alias t="sensors coretemp-isa-0000 | grep ^Package | cut -f2 -d'+'|cut -f1 -d' '"
fi


